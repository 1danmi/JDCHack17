<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/msg_list_item_recv_dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="2dp">

    <LinearLayout
        android:id="@+id/mms_layout_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:id="@+id/message_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true" >
                <ImageView
                    android:id="@+id/corner"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/message_start"
                    android:backgroundTint="@color/grey_800"
                    />
                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Test"
                    android:backgroundTint="@color/grey_800"
                    android:textColor="#FFFFFF"
                    android:padding="7dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_start"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/message_block"
                android:layout_below="@+id/message_block"
                android:layout_marginStart="26dp"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dip"
                    android:lines="1"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
